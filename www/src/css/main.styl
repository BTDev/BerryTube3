// GLOBALS
main-site-wrapper-width = 1200px;
	
body{

	font-family: 'Droid Sans', sans-serif;

	&[data-bt-logged-in=true] {
		background-color: black;
	}
	
}

#root {
	width:main-site-wrapper-width;
	margin:0 auto;
}

#playlist {

	playlist-width = 500px;
	playlist-height = 350px;

	width playlist-width;
	height playlist-height;
	float left
	background black
	position relative 
	color:white;
	
	.scrollwrapper {
	
		height:100%;
	
		#plitems {
			margin-right:20px;
			
			// Playlist items here are broken out below mostly because of ghosting
			
		}
		
		.scrolltrack {
			position: absolute;
			top: 0;
			width: 20px;
			height: 100%;
			background: #F00;
			right: 0;
			
			.scrollscrubber {
				width: 100%;
				height: 50px;
				background-color: #00F;
			}
			
		}
	}
	
}
.playlistitem {

	position: relative;
	border: 1px solid;
	margin: 2px;
	overflow hidden

	.handle{
	
		// Only show on perms
		body[data-bt-playlist-sort=true] & { width:5%; }
		transition: 0.5s all;
	
		overflow: hidden;
		position:absolute;
		left:0;
		top:0;
		height:100%
		width:0; 
		background:gray
		cursor: -webkit-grab;
		cursor: -moz-grab;
		
		.fa.fa-bars {
			width: 100%;
			text-align: center;
			pointer-events: none;
		}
		
	}
	
	.content{
	
		// Only show on perms
		body[data-bt-playlist-sort=true] & { margin-left:5%; }
		transition: 0.5s all;
	
		margin-left:0;
	}
	
	&.target { 
		background:green;
		
		&.below:after {
			display: block;
			content: "\f060";
			font-family: "FontAwesome";
			height: 60px;
			position: absolute;
			bottom: -30px;
			left: 30px;
			line-height: 60px;
			width: 30px;
			box-sizing: border-box;
			z-index: 1;
			font-size: 30px;
			pointer-events: none;
		}
		
		&.above:before {
			display: block;
			content: "\f060";
			font-family: "FontAwesome";
			height: 60px;
			position: absolute;
			top: -30px;
			left: 30px;
			line-height: 60px;
			width: 30px;
			box-sizing: border-box;
			z-index: 1;
			font-size: 30px;
			pointer-events: none;
		}
		
	}
	
	&.ghost{
		padding: 3px;
		width: 400px;
		background-color: black;
		color: white;
		opacity: 0.5;
	}
}


// Social Section
#social { 
	
	// Define some vars
	social-width = 700px;
	social-height = 350px;
	social-input-height = 30px;
	social-userlist-width = 150px;
	
	width: social-width;
	position relative
	height social-height
	float:right;
	
	// Chat "Module"
	#chat {

		font-size: 12pt;
		width: social-width;
		box-sizing: border-box;

		#input {
			#chatinput {
				display: block;
				width: social-width - social-userlist-width;
				box-sizing: border-box;
				border: 1px solid;
				height: social-input-height;
				padding: 3px;
			}
		}
		
		#chatbuffers {
		
			height: social-height - social-input-height;
			width: social-width - social-userlist-width;
		
			.channel {
			
				background-color: #fff;
				height:100%;
				border: 1px solid;
				box-sizing: border-box;
				overflow-y: scroll;
				overflow-x: wrap;
				
				.chatline {
					
					margin: 5px 0 0;
					
					span {
						padding: 0 3px;
					}
					
					.timestamp {
						font-size: 0.7em;
						font-style: italic;
						&:before { content: "<"; }
						&:after { content: ">"; }
					}
					
					.username {
						font-weight:bold;
						&:after { content: ":"; }
					}
					
					&.error{
						color: #D60000;
						background-color: rgba(255, 0, 0, 0.08);
					}
					
					&.addendum{
						margin: 0 0 0 20px;
						.timestamp { display:none }
						.username { display:none } 
					}
					
					
				}
				
			}
			
		}
		
	}

	#userlist {
		float right
		width social-userlist-width
		background white
		height 100%
		
		.list {
			border: 1px solid;
			box-sizing: border-box;
			height: 100%;
			width: 100%;
			
			.user {
				font-weight: bold;
				padding: 3px;
			}
		}
		
	}

	#login {
		// Only show on perms
		body[data-bt-logged-in=true] & { display:none; }
	}
	
	
}

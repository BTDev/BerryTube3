// GLOBALS
main-site-wrapper-width = 960px;
chat-pane-height = 330px
chat-pane-width = 480px

// MIXINS
 
vendor(prop, args)
	-webkit-{prop} args
	-moz-{prop} args
	-ms-{prop} args
	-o-{prop} args
	{prop} args

animation()
	vendor('animation', arguments)

user-select()
	vendor('user-select', arguments)

// STYLES

.root
	width main-site-wrapper-width
	margin 0 auto

img
	border 1px solid

#beam1
	animation: blinky 7s infinite;

#beam2
	animation: blinky 11s infinite;

#beam3
	animation: blinky 13s infinite;

@keyframes blinky 
	0%
		fill #000000
	50%
		fill #ffffff
	100%
		fill #000000

// PLAYLIST

#playlist 
	height 200px
	width 480px
	float left

#playlist .frame
	overflow hidden
	height 100%
	position relative

#playlist .list .track
	cursor pointer

#playlist .list .track .title
	user-select none
	cursor inherit

#playlist .list .track.active
	background lime

// VIDEO

#video iframe
	border 0
	
// CHAT

#chatpane
	float right
	height chat-pane-height
	width chat-pane-width

#chatbuffer
	height chat-pane-height - 10
	background white

#chatbuffer .message
	padding 2px
	text-indent 16px
	font-family arial
	font-size 13px
	
#chatbuffer .message .from
	font-weight bold

#chatinput input
	width 100%
	border 0
	padding 0
	margin 0
// GLOBALS
main-site-wrapper-width = 1200px;
	
body{

	font-family: 'Muli', sans-serif;

	&[data-bt-logged-in=true] {
		background-color: black;
	}
	
}

#root {
	width:main-site-wrapper-width;
	margin:0 auto;
}

// Social Section
#social { 
	
	// Define some vars
	social-width = 700px;
	social-height = 350px;
	social-input-height = 30px;
	social-userlist-width = 150px;
	
	width: social-width;
	position relative
	height social-height
	
	// Chat "Module"
	#chat {

		font-size: 12pt;
		width: social-width;
		box-sizing: border-box;

		#input {
			#chatinput {
				display: block;
				width: social-width - social-userlist-width;
				box-sizing: border-box;
				border: 1px solid;
				height: social-input-height;
				padding: 3px;
			}
		}
		
		#chatbuffers {
		
			height: social-height - social-input-height;
			width: social-width - social-userlist-width;
		
			.channel {
			
				background-color: #fff;
				height:100%;
				border: 1px solid;
				box-sizing: border-box;
				overflow-y: scroll;
				overflow-x: wrap;
				
				.line {
					
					span {
						padding: 0 3px;
					}
					
					.timestamp {
						font-size: 0.7em;
						font-style: italic;
						&:before { content: "<"; }
						&:after { content: ">"; }
					}
					
					.username {
						font-weight:bold;
						&:after { content: ":"; }
					}
					
					&.error{
						color: #D60000;
						background-color: rgba(255, 0, 0, 0.08);
					}
					
				}
				
			}
			
		}
		
	}

	#userlist {
		float right
		width social-userlist-width
		background white
		height 100%
		
		.list {
			border: 1px solid;
			box-sizing: border-box;
			height: 100%;
			width: 100%;
			
			.user {
				font-weight: bold;
				padding: 3px;
			}
		}
		
	}

	#login {
		
		
		
	}
	
	
}

// Flag Styles
body[data-bt-logged-in=true] #login{ display:none; }

